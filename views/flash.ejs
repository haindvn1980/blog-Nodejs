<% if(messages.errors) { %>
<div style="padding:10px;"></div>
<div class="alert alert-danger fade show" role="alert">
  <i class="far fa-times-circle">
    <% for(var i=0 ;i< messages.errors.length;i++ ) {%>
    <div style="height: 20px;"><%=messages.errors[i].msg %></div>
    <%}%>
  </i>
</div>
<%} %>


    <% if(messages.info) { %>
    <div style="padding:10px;"></div>
    <div class="alert alert-info fade show" role="alert">
      <i class="far fa-times-circle">
        <% for(var i=0 ;i< messages.info.length;i++ ) {%>
        <div style="height: 20px;"><%=messages.info[i].msg %></div>
        <%}%>
</i>
  </div>
</div>
  <%} %>
        <% if(messages.success) { %>
        <div style="padding:10px;"></div>
        <div class=" alert alert-success fade show" role="alert">
          <i class="far fa-times-circle">
            <% for(var i=0 ;i< messages.success.length;i++ ) {%>
            <div style="height: 20px;"><%=messages.success[i].msg %></div>
            <%}%>
    </i>
  </div>
  <%} %>