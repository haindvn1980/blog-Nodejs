<%- include('./header.ejs')%>
<%- include('./flash.ejs')%>
<br>
<form method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label>Title:</label>
    <input class="form-control" name="title" type="text" size="100px" />
  </div>
  <div class="form-group">
    <label>Category</label>
    <select class="form-control" name="category">
      <% categories.forEach(function(category) { %>
      <option value="<%= category.category_name %>"><%= category.category_name %></option>
      <% }); %>
    </select>
  </div>
  <div class="form-group">
    <label>Sub content</label>
    <textarea class="form-control" name="subcontent" id="content"></textarea>
  </div>
  <br>
  <div class="form-group">
    <label>Main Content</label> <br>
    <textarea class="form-control" name="maincontent" id="content"></textarea>
  </div>
  <br>
  <div class="form-group">
    <label>Main Image:</label> <br>
    <input class="form-control" name="mainimage" type="file" />
  </div>
  <div class="form-group">
    <label>Author:</label>
    <select class="form-control" name="author">
      <option value="Nguyễn Đức Hải">Nguyễn Đức Hải</option>
      <option value="Nguyễn Ngọc Ban Mai">Nguyễn Ngọc Ban Mai</option>
      <option value="Nguyễn Ngọc Trúc Mai">Nguyễn Ngọc Trúc Mai</option>
    </select>
  </div>
  <br>
  <div class="form-group">
    <input class="btn btn-default" name="submit" type="submit" value="Save" />
  </div>
  <script src="/ckeditor/ckeditor.js"></script>
  <script>CKEDITOR.replace('subcontent');</script>
  <script>CKEDITOR.replace('maincontent');</script>
</form>

<%- include('./footer.ejs')%>